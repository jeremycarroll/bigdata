<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>bigdata</display-name>

    <!-- KB REST Servlet Configuration -->
    
    <servlet>
        <servlet-name>rest</servlet-name>
        <servlet-class>com.bigdata.rdf.sail.remoting.GraphRepositoryServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <init-param>
            <param-name>sail.properties</param-name>
            <param-value>bigdata.properties</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>rest</servlet-name> 
        <url-pattern>/*</url-pattern> 
    </servlet-mapping>

</web-app>
