// JiniServiceConfiguration will read this section and
// construct the command line used to start the smart
// proxy implementation of the transaction service
com.bigdata.transaction.ServiceImpl {

    //system property app.home is set in build.xml and
    //should be set on the VM executed by any ide that
    //is used to run the tests that use this config file

    private static appDotHome = 
        System.getProperty("app.home", ConfigMath.getAbsolutePath(new File(".")) );
    private static policyFile = 
        ConfigUtil.concat( new String[] { appDotHome, "${/}dist${/}bigdata${/}var${/}config${/}policy${/}policy.all" } );
    private static configFile = 
        ConfigUtil.concat( new String[] { appDotHome, "${/}dist${/}bigdata${/}var${/}config${/}jini${/}transaction.config" } );
    private static logFile = 
        ConfigUtil.concat( new String[] { appDotHome, "${/}dist${/}bigdata${/}var${/}config${/}logging${/}transaction-logging.properties" } );
    private static logDir = 
        ConfigUtil.concat( new String[] { appDotHome, "${/}dist${/}bigdata${/}var${/}log" } );

    //overrides for the entries in the config file specified
    //below in the args entry; which will be added (as part
    //of the options) to the arguments supplied on the 
    //command line used to execute the service

    private static quote = "\"";
    private static comma = ",";
    private static openBracket = "{";
    private static closeBracket = "}";

    private static groupsToJoin = 
        ConfigUtil.concat( new String[] { "com.bigdata.transaction.groupsToJoin=",
                                          "new String[]",
                                          openBracket,
                                          quote, bigdata.fedname, quote,
                                          comma,
                                          quote, bigdata.zrootname, quote,
                                          closeBracket,
                                        } );
    private static locatorsToJoin = 
        ConfigUtil.concat( new String[] { "com.bigdata.transaction.locatorsToJoin=",
                                          "new LookupLocator[]",
                                          openBracket,
                                          closeBracket
                                        } );


    options = new String[]{"com.bigdata.transaction.EmbeddedTransactionService.Options.SNAPSHOT_INTERVAL=60000",
                           groupsToJoin, locatorsToJoin };

    //set app.home system property rather than appHome system property
    //so that ConfigDeployUtil.getPropertiesPath will look for the
    //default-deploy.properties file in <app.home>/dist/bigdata/var/config/deploy,
    //rather than /opt/bigdata/var/config/deploy, <appHome>/var/config/deploy,
    //or (if none of the above exist), <user.dir>/src/java/com/bigdata/util/config

    args = new String[]{ 
        "-Xmx1G",
        "-Djava.security.manager=",
        "-Dlog4j.configuration="+logFile,
        "-Dlog4j.primary.configuration="+logFile,
        "-Djava.util.logging.config.file="+logFile,
        "-Dbigdata.logDir="+logDir,
        "-Dapp.home="+appDotHome,
        "-Dconfig="+configFile,
        "-DusingServiceConfiguration=true"

    };
}
